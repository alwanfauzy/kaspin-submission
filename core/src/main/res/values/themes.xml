<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Typography  -->
    <style name="TextCaption">
        <item name="android:textSize">@dimen/font_12sp</item>
        <item name="android:textColor">@color/grey_darker</item>
    </style>

    <style name="TextNormal">
        <item name="android:textSize">@dimen/font_14sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="TextMedium">
        <item name="android:textSize">@dimen/font_16sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="TextMedium.Bold">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextLarge">
        <item name="android:textSize">@dimen/font_20sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="TextLarge.Bold">
        <item name="android:textStyle">bold</item>
    </style>
</resources>