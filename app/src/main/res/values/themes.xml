<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.BarangKu" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/pink</item>
        <item name="colorPrimaryVariant">@color/pink</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:windowBackground">@color/grey</item>
    </style>

    <!-- Typography  -->
    <style name="TextNormal">
        <item name="android:textSize">@dimen/font_14sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="TextNormal.Bold">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextCaption">
        <item name="android:textSize">@dimen/font_12sp</item>
        <item name="android:textColor">@color/black</item>
    </style>
</resources>